<section class="book_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="RegisterOfDoctor" enctype="multipart/form-data">
                    <h4>
                        Add <span>Doctor</span>
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.FirstName"></label>
                            <input asp-for="@Model.FirstName" type="text" class="form-control" id="inputFirstname" placeholder="Enter First Name">
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.LastName"></label>
                            <input asp-for="@Model.LastName" type="text" class="form-control" id="inputLastName" placeholder="Enter Last Name">
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Gender"></label>
                            <select asp-for="@Model.Gender" class="form-control wide" id="inputGender" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="NoSelected ">--Please Select Gender-- </option>
                            </select>
                            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                        </div>  
                    </div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Name">Name</label>
                            <input asp-for="@Model.Name" type="text" class="form-control" id="Name" placeholder="Enter Name">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.PhoneNumber"></label>
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="inputPhone" placeholder="Enter Phone Number" maxlength="12">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.BirthDate"></label>
                            <div class="input-group date" id="inputDate" data-date-format="mm-dd-yyyy">
                                <input asp-for="@Model.BirthDate" id="displayYear" type="text" class="form-control" readonly>
                                <span class="input-group-addon date_icon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                            <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="@Model.Location">Location</label>
                            <input asp-for="@Model.Location" type="text" class="form-control" id="Location" placeholder="Enter Location">
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.Zone">Zone</label>
                            <input asp-for="@Model.Zone" type="text" class="form-control" id="Zone" placeholder="Enter Zone">
                            <span asp-validation-for="@Model.Zone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.Price">Price</label>
                            <input asp-for="@Model.Price" type="number" class="form-control" id="Price" placeholder="Enter Price">
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Email"></label>
                            <input asp-for="@Model.Email" type="text" class="form-control" id="Email" placeholder="Enter Email">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Password">Password</label>
                            <input asp-for="@Model.Password" type="password" class="form-control" id="Password" placeholder="Enter Password">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Enter Confirm Password">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="@Model.ImageFile">Image Profile</label>
                            <input type="file" asp-for="@Model.ImageFile" value="0" class="form-control" style="padding:8px;">
                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                            <label asp-for="@Model.ProfileImg">Or Link</label>
                            <input type="text" asp-for="@Model.ProfileImg" class="form-control" placeholder="Enter Link of image ">
                            <span asp-validation-for="@Model.ProfileImg" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label asp-for="@Model.About">About Doctor</label>
                            <textarea asp-for="@Model.About" class="form-control-range" rows="4" cols="30" placeholder="Enter About Doctor"></textarea>
              @*              <input asp-for="@Model.About" type="text" class="message-box" id="Price" placeholder="Enter About Doctor">*@
                            <span asp-validation-for="@Model.About" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="btn-box">
                        <button type="submit" class="btn ">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $('input, select').on('focus', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#80bdff');
            });
            $('input, select').on('blur', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
            });
        });
    </script>
