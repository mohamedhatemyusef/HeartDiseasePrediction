@model HeartDiseasePrediction.ViewModel.BookAppointmentViewModel

@{
    ViewData["Title"] = "Book Appointment";
}
<style type="text/css">
    /* body {
            color: #000;
            overflow-x: hidden;
            height: 100%;
            background-color: #C5CAE9 !important;
            background-repeat: no-repeat;
            padding: 0px !important;
        }*/

