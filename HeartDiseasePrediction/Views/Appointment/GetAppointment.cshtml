@model HeartDiseasePrediction.ViewModel.AppointmentVM

@{
    ViewData["Title"] = "Appointment Details Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style type="text/css">
    body {
        margin-top: 20px;
        color: black;
        text-align: left;
        background-color: white;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        /* box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);*/
        box-shadow: 0px 4px 8px 0px #7986CB;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

</style>

<div class="container ">
    <div class="main-body">
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Appointment Details</li>
            </ol>
        </nav>
    </div>
    <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="mt-3">
                            <h4><strong>@Model.FirstName</strong> <strong>@Model.FirstName @Model.LastName</strong></h4>
                            <p class="text-secondary mb-1">Patient</p>
                            <p class="text-muted font-size-sm">@Model.PatientEmail</p>
                            <a class="btn btn-outline-info" asp-controller="Prescription" asp-action="GetPatientPrescriptions" asp-route-id="@Model.Id"><i class="fa fa-eye"></i> View</a>
                            <a class="btn btn-outline-success" asp-controller="Prescription" asp-action="CreatePresciptions" asp-route-id="@Model.Id"><i class="fa fa-plus-circle"></i> Add</a>
                            @*<a class="btn btn-primary" asp-controller="Doctor" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-pencil-square"></i>  Edit</a>
                            <a class="btn btn-danger" asp-controller="Doctor" asp-action="DeleteDoctor" asp-route-id="@Model.Id" onclick="ConfirmDelete()"><i class="fa fa-trash"></i> Delete</a>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Appointment Date</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Date.ToString("dd MMMM yyyy")
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Doctor Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Name
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Doctor Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.DoctorEmail
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pateint Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PatientEmail
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pateint SSN</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PatientSSN
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Patient Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.FirstName @Model.LastName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pathient Phone Number</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PhoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pathient Age</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Age
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Patient Gender</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Gender
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    function ConfirmDelete() {
        document.getElementById("");
        var accept = confirm("Are You Sure to delete this actor?");
        if (accept == false) {
            event.preventDefault();
        }
    }
</script>