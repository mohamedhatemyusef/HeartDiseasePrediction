@model List<Database.Entities.Message>

@{
	ViewData["Title"] = "Message List Page";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<style>
	.card {
		box-shadow: 0px 4px 8px 0px #7986CB;
	}
</style>
<section class="card card-body bg-light " style="margin:30px 150px">
	<div class="container mt-4">
		<div class="row">
			<div class="col-md-10 offset-md-1">
				<div class="main-body">
					<nav aria-label="breadcrumb" class="main-breadcrumb ">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">Message</li>
							<li class="breadcrumb-item">List</li>
							<li class="breadcrumb-item active" aria-current="page">List of Messages</li>
						</ol>
					</nav>
				</div>
			@*	<div class="form-inline justify-content-end my-2 my-lg-1 d-flex">
					<div>
						@using (Html.BeginForm("Index", "Appointment", FormMethod.Post))
						{
							@Html.TextBox("search",null,new{@class="form-control",placeholder="Search here...",style="margin:5px 0px 5px 5px"})
							<button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> </button>
						}
					</div>
				</div>*@
				@if (!Model.Any())
				{
					<div class="alert alert-warning" role="alert">
						No Messages Found
					</div>
				}
				else
				{
					<table class="table table-hover table-responsive table-striped">
						<thead>
							<tr class="text-center bg-dark text-light">
								<th>Id</th>
								<th>Message</th>
								<th>Date</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="align-middle text-center counterColumn">
									</td>
									<td class="align-middle text-center">
										@item.Messages
									</td>
									<td class="align-middle text-center">
										@item.Date.ToString("dd/MM/yyyy")
									</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</div>
		</div>
	</div>
</section>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		var counterCells = document.querySelectorAll(".counterColumn");
		var counter = 1;
		counterCells.forEach(function (cell) {
			cell.textContent = counter++;
		});
	});
</script>