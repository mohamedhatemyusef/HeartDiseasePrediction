@model HeartDiseasePrediction.ViewModel.LabViewModel

@{
    ViewData["Title"] = "Edit Lab Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="book_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <h4>
                        Create <span>Lab</span>
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Name" class="control-label"></label>
                            <input asp-for="@Model.Name" type="text" class="form-control" id="inputFullName">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="inputFullName" maxlength="12">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Email" class="control-label"></label>
                            <input asp-for="@Model.Email" type="text" class="form-control" id="inputEmail">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row ">
                        <div class="form-group col-lg-6">
                            <label asp-for="@Model.Location" class="control-label"></label>
                            <input asp-for="@Model.Location" type="text" class="form-control" id="inputLocation" placeholder="Enter Lab Location">
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.Zone" class="control-label"></label>
                            <input asp-for="@Model.Zone" type="text" class="form-control" id="inputZone" placeholder="Enter Lab Zone">
                            <span asp-validation-for="@Model.Zone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.Price" class="control-label"></label>
                            <input asp-for="@Model.Price" type="text" class="form-control" id="inputPrice" placeholder="Enter Lab Price">
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row ">
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.StartTime" class="control-label"></label>
                            <input asp-for="@Model.StartTime" type="text" class="form-control" id="inputStartTime" placeholder="Lab Open">
                            <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label asp-for="@Model.EndTime" class="control-label"></label>
                            <input asp-for="@Model.EndTime" type="text" class="form-control" id="inputEndTime" placeholder="Lab Close">
                            <span asp-validation-for="@Model.EndTime" class="text-danger"></span>
                        </div>
                 
                        <div class="form-group col-lg-6">
                            <label asp-for="@Model.About"></label>
                            @*       <input asp-for="@Model.About" type="text" class="form-control" id="About" placeholder="Enter About">*@
                            <textarea asp-for="@Model.About" class="form-control-range" rows="4" cols="30" placeholder="Enter About"></textarea>
                            <span asp-validation-for="@Model.About" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-8">
                            <div>
                                @*<label>Current Image</label>*@
                                <img src="@Model.ProfileImg" height="100" width="100" />
                               @* <input asp-for="@Model.ProfileImg" type="hidden" />*@
                            </div>
                            <label asp-for="@Model.ImageFile">Lab Image</label>
                            <input type="file" asp-for="@Model.ImageFile" value="0" class="form-control" style="padding:8px;">
                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                            <label asp-for="@Model.ProfileImg">Or Link</label>
                            <input type="text" asp-for="@Model.ProfileImg" class="form-control" placeholder="Enter Link of image ">
                            <span asp-validation-for="@Model.ProfileImg" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Id" hidden class="control-label"></label>
                            <input asp-for="@Model.Id" hidden type="text" class="form-control" id="inputFullName">
                        </div>
                    </div>
                    <div class="btn-box">
                        <button type="submit" class="btn ">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}